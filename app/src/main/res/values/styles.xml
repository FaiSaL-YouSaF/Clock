<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title_text_appearance">
        <item name="fontFamily">@font/university</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/university</item>
        <item name="android:textSize">@dimen/title_txt_size</item>
    </style>

    <style name="TabTextAppearance">
        <item name="android:textSize">@dimen/tab_txt_size</item>
    </style>

    <style name="rounded_smaller_chips" parent="Widget.Material3.Chip.Filter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/chip_txt_size</item>
        <item name="android:radius">300dp</item>
        <item name="chipCornerRadius">30dp</item>
        <item name="chipStartPadding">2dp</item>
        <item name="chipEndPadding">2dp</item>
        <item name="ensureMinTouchTargetSize">false</item>
    </style>

    <style name="CustomNumberPickerStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item> <!-- makes touch target >= 48dp -->
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item> <!-- Material3 BodyLarge -->
        <item name="android:layout_marginHorizontal">8dp</item>
    </style>

    <!-- Rounded / oval chip style -->
    <style name="Widget.App.Chip.Day" parent="Widget.Material3.Chip.Filter">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">@dimen/chip_txt_size</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.Chip.Oval</item>
        <item name="chipBackgroundColor">@color/chip_day_selector</item>
        <item name="android:textColor">@color/chip_day_text_selector</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/chip_day_stroke</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Fully rounded / oval -->
    <style name="ShapeAppearance.App.Chip.Oval" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>