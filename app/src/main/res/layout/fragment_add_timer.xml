<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_timer.AddTimerFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.60" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_time_pickers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/et_label"
        app:layout_constraintEnd_toStartOf="@+id/vertical_end"
        app:layout_constraintStart_toEndOf="@+id/vertical_start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.92">

        <com.faisalyousaf777.clock.utils.MaterialNumberPicker
            android:id="@+id/number_picker_hours"
            style="@style/CustomNumberPickerStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/number_picker_minutes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:pickerMode="hours_24" />

        <com.faisalyousaf777.clock.utils.MaterialNumberPicker
            android:id="@+id/number_picker_minutes"
            style="@style/CustomNumberPickerStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/number_picker_seconds"
            app:layout_constraintStart_toEndOf="@+id/number_picker_hours"
            app:layout_constraintTop_toTopOf="parent"
            app:pickerMode="minutes_seconds" />

        <com.faisalyousaf777.clock.utils.MaterialNumberPicker
            android:id="@+id/number_picker_seconds"
            style="@style/CustomNumberPickerStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/number_picker_minutes"
            app:layout_constraintTop_toTopOf="parent"
            app:pickerMode="minutes_seconds" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:text="Label"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_ringtone"
        app:layout_constraintEnd_toStartOf="@+id/vertical_end"
        app:layout_constraintStart_toEndOf="@id/vertical_start"
        app:layout_constraintTop_toBottomOf="@+id/layout_time_pickers"
        tools:text="Label" />

    <TextView
        android:id="@+id/tv_ringtone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:text="Ringtone"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_bottom"
        app:layout_constraintEnd_toStartOf="@+id/vertical_end"
        app:layout_constraintStart_toEndOf="@id/vertical_start"
        app:layout_constraintTop_toBottomOf="@+id/et_label"
        tools:text="Ringtone" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_play_pause_timer"
        style="?attr/materialIconButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/play_arrow_24dp"
        app:iconSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/vertical_end"
        app:layout_constraintStart_toEndOf="@+id/vertical_start"
        app:layout_constraintTop_toBottomOf="@id/horizontal_bottom" />

</androidx.constraintlayout.widget.ConstraintLayout>